<Window x:Class="group_project.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:group_project"
        mc:Ignorable="d"
        Title="Note" Height="350" Width="525"
        Icon="/icons/default.ico"
        MinWidth="256" MinHeight="256" Opacity="0.95" Style="{DynamicResource DefaultWindowStyle}">
    <Grid>
        <TextBox x:Name="textBox" Margin="0,0,0.333,0" TextWrapping="Wrap" Text="hello world" FontSize="22" KeyDown="KeyEvents" TextChanged="textBox_TextChanged" BorderBrush="{x:Null}" SelectionBrush="#FF00FFE8" FontFamily="Consolas" IsInactiveSelectionHighlightEnabled="True" Foreground="#FF0BAE00" CaretBrush="Lime" TextOptions.TextFormattingMode="Display">
            <TextBox.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#0C000000" Offset="0"/>
                    <GradientStop Color="#0C00B9FF" Offset="1"/>
                </RadialGradientBrush>
            </TextBox.Background>
            <TextBox.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="1"/>
            </TextBox.Effect>
        </TextBox>
    </Grid>
</Window>
